# üìê Environment Configuration - Worktree-Forms
# Copy this file to .env and update values for your environment

# Application Settings
NODE_ENV=development
APP_NAME=Worktree-Forms

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=worktree
DB_PASSWORD=worktree_dev_pass
DB_NAME=worktree_forms
DATABASE_URL=postgresql://worktree:worktree_dev_pass@db:5432/worktree_forms

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Backend Server
BACKEND_PORT=5000
BACKEND_URL=http://localhost:5000

# Frontend Server
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-immediately
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Session Configuration
SESSION_TIMEOUT=30m

# Email Configuration (Optional - for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@worktreeforms.com

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_DARK_MODE=true
ENABLE_CUSTOM_ROLES=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Admin Configuration
ADMIN_EMAIL=admin@worktreeforms.com
ADMIN_PASSWORD=change_me_in_production

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# API Configuration
API_VERSION=v1
API_BASE_URL=/api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Development
DEBUG=false
SOURCE_MAPS=true
