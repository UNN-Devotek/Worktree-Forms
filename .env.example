# Application
NODE_ENV=development
APP_NAME=Worktree-Forms

# Database
DB_HOST=db
DB_PORT=5432
DB_USER=worktree
DB_PASSWORD=worktree_dev_pass
DB_NAME=worktree_forms
DATABASE_URL=postgresql://worktree:worktree_dev_pass@db:5432/worktree_forms

# Redis
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Backend
BACKEND_PORT=5000
BACKEND_URL=http://localhost:5000

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-immediately
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Session
SESSION_TIMEOUT=30m

# Email (for future use)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@worktreeforms.com

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_DARK_MODE=true
ENABLE_CUSTOM_ROLES=true

# Admin
ADMIN_EMAIL=admin@worktreeforms.com
ADMIN_PASSWORD=change_me_in_production
